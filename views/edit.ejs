<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" value="<%= blog.title %>" name="blog[title]">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name= "blog[image]" value=<%= blog.image %> required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%= blog.body %></textarea>
        </div>
        <input class="ui violet big inverted button" type="submit">
        <a class="ui violet big inverted button" href="/blogs/<%= blog._id %>">Cancel <i class="small remove icon"></i></a>
    </form>
</div>

<% include ./partials/footer %>